      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "estatePerRepInd": {
              "$ref": "#/definitions/estatePerRepInd"
            }
          },
          "required": [
            "estatePerRepInd"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "estatePerRepOrg": {
              "$ref": "#/definitions/estatePerRepOrg"
            }
          },
          "required": [
            "estatePerRepOrg"
          ],
          "additionalProperties": false
        }
      ]
    },
    "passportType": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string",
          "pattern": "^[A-Za-z0-9]{1,30}$"
        },
        "expirationDate": {
          "$ref": "#/definitions/dateString"
        },
        "countryOfIssue": {
          "$ref": "#/definitions/countryType"
        }
      },
      "required": [
        "number",
        "expirationDate",
        "countryOfIssue"
      ],
      "additionalProperties": false
    },
    "phoneString": {
      "type": "string",
      "pattern": "^\\+[0-9 ]{1,18}$|^[0-9 ]{1,19}$"
    },
    "willTypeEstate": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/nameType"
        },
        "dateOfBirth": {
          "$ref": "#/definitions/dateString"
        },
        "dateOfDeath": {
          "$ref": "#/definitions/dateString"
