<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date{ISO8601} level=[%level] logger=[%logger] thread=[%thread] message=[%message] %replace(exception=[%xException]){'^exception=\[\]$',''}%n</pattern>
        </encoder>
    </appender>

    <logger name="transformers" level="OFF"/>
    <logger name="controllers" level="OFF"/>
    <logger name="services" level="OFF"/>
    <logger name="models" level="OFF"/>
    <logger name="repositories" level="OFF"/>
    <logger name="connector" level="OFF"/>
    <logger name="transformers" level="OFF"/>
    <logger name="utils" level="OFF"/>
    <logger name="reactivemongo.core.protocol.MongoHandler" level="OFF"/>
    <logger name="reactivemongo.api.MongoConnection" level="OFF"/>

    <root level="OFF">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
